<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Full Name"

         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_below="@+id/name"
        android:hint="Phone Number"

        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/email"
            android:layout_below="@+id/phone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Physical Address"
            android:id="@+id/address"
            android:layout_below="@+id/email"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Take A Picture"
            android:id="@+id/picture_btn"
            android:layout_below="@+id/address"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/picture_taken"
            android:scaleType="fitXY"
            android:layout_below="@+id/picture_btn"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Web Site"
            android:id="@+id/website"
            android:layout_below="@+id/picture"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthdate"
            android:id="@+id/date_btn"
            android:layout_below="@+id/picture"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_chosen"

            android:textSize="17sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When to Call"
            android:id="@+id/timefrom"
            android:layout_below="@+id/when"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_fromchosen"
            android:textSize="17sp"
            android:layout_below="@+id/timefrom"/>



    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_gravity="center_horizontal"
        android:id="@+id/save_btn"
        android:layout_below="@+id/phone"
        />



    </LinearLayout>

</ScrollView>